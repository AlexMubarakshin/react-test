{
    "compilerOptions": {    
    "target": "es2015",
    "module": "es2015",
    "jsx": "react",
    "outDir": "ts-build",    
    "rootDir": "src",
    "allowJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "sourceMap": true        
  },
  "filesGlob": [
        "typings/index.d.ts",
        "typings/globals/**/*.d.ts",
        "src/**/*.ts",
        "src/**/*.tsx"
    ],
    "exclude": [
        "typings/main",
        "typings/main.d.ts",
        "typings/browser",
        "typings/browser.d.ts",
        "index.android.js",
        "index.ios.js",
        "gulpfile.js",
        "src/index.tsx",
        "web",
        "ts-build",
        "node_modules",
        "type-declarations/require.d.ts"
    ]  
}
