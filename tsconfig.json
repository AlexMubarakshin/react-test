{
  "version": "1.8.10",
  "compilerOptions": {
    "module": "es6",
    "target": "es6",
    "moduleResolution": "node",    
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "sourceMap": true,    
    "jsx": "preserve"
  },
  "filesGlob": [
        "typings/index.d.ts",
        "typings/globals/**/*.d.ts",
        "src/**/*.ts",
        "src/**/*.tsx"
    ],
    "exclude": [
        "typings/main",
        "typings/main.d.ts",
        "typings/browser",
        "typings/browser.d.ts",
        "index.android.js",
        "index.ios.js",
        "build",
        "node_modules",
        "type-declarations/require.d.ts"
    ]  
}
